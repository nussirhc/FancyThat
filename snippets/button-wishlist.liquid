{% comment %}
  Shopify Wishlist
  Usage:
    - Markup: {%- render 'button-wishlist', product: product -%}
    - Place this snippet inside your existing product card snippet
  Parameters:
    - product: <Shopify product> (required)
{% endcomment %}
{%- if product.handle != blank -%}
  <button type="button" aria-label="Add to wishlist" class="" button-wishlist data-product-handle="{{ product.handle }}">
    <style scoped>
      .icon {
          display: inline-block;
          width: 20px;
          height: 20px;
          vertical-align: middle;
          fill: currentColor;
      }
      .icon {
        fill: transparent;
        stroke: #000000;
        transition: fill 0.3s ease;
      }
      .active .icon {
        fill: red;
        stroke: #000000;
      }
      button {
        font-size: 16px;
        font-family: "Work Sans", sans-serif;
        font-style: normal;
        font-weight: 400;
        color: #3d4246;
        line-height: 1.5;
      }
    </style>
    {%- render 'icon-heart' -%}
  </button>
{%- endif -%}